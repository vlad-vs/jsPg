var count = str.length / 2;

var b = true;

var counter = 0;

for (var j = 0; j < str.length; ++j) {
 	if (str[j] === str[str.length - j- 1]) {
 		counter = counter + 1;
 		if (counter === count ) {
 			break;
 		}
 	} 
 	else b = false;
 } 

 if (b) {
 	 alert('Yes');
 } else alert('no');
 
